@model Blog
@{
    Layout = "_DashBoard";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Blog</span>
        </div>

        <div>
            <form method="post" asp-action="AddBlog" class="row">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Blog Name</label>
                    <input type="text"
                        asp-for="Name"
                           class="form-control"
                           placeholder="" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Blog Description</label>
                    <textarea type="text"
                              class="form-control"
                              asp-for="Description"
                              placeholder=""></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Quantity" class="form-label">Blog Quantity</label>
                    <input type="number"
                        asp-for="Quantity"
                           class="form-control"
                           placeholder=""></input>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Price" class="form-label">Blog Price</label>
                    <input type="number"
                        asp-for="Price"
                           class="form-control"
                           placeholder=""></input>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="typeID" class="form-label">Type</label>
                    <select class="form-select "
                           asp-for="typeID">
                        <option selected>Select one</option>
                        <option value="1">comedy</option>
                        <option value="2">drama</option>
                        <option value="3">Action</option>
                    </select>
                    <span asp-validation-for="typeID" class="text-danger"></span>
                </div>

                <div class=" mb-3 col-lg-5 d-flex align-items-center mt-lg-4 ">
                    <input class="form-control" type="file" id="formFile">
                </div>

                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>