@model Blog
@{
    Layout = "_DashBoard";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Editing Blog</span>
        </div>

        <div>
            <form method="post" asp-action="EditBlog" class="row">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Blog Name</label>
                    <input type="text"
                           asp-for="Name"
                           value="@Model.Name"
                           class="form-control"
                           placeholder="" />

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Blog Description</label>
                    <textarea type="text"
                              class="form-control"
                              asp-for="Description"
                              placeholder="">@Model.Description</textarea>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Quantity" class="form-label">Blog Quantity</label>
                    <input type="number"
                           asp-for="Quantity"
                           value="@Model.Quantity"
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Price" class="form-label">Blog Price</label>
                    <input type="number"
                           asp-for="Price"
                           value="@Model.Price"
                           class="form-control"
                           placeholder=""></input>
                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="typeID" class="form-label">Type</label>
                    <select class="form-select "
                            asp-for="typeID">
                        @{
                            if (Model.typeID == 1)
                            {
                                <option>Select one</option>
                                <option selected value="1">comedy</option>
                                <option value="2">drama</option>
                                <option value="3">Action</option>
                            }
                            else if(Model.typeID==2)
                            {
                                <option>Select one</option>
                                <option value="1">comedy</option>
                                <option selected value="2">drama</option>
                                <option value="3">Action</option>
                            }
                            else if (Model.typeID == 3)
                            {
                                <option>Select one</option>
                                <option value="1">comedy</option>
                                <option value="2">drama</option>
                                <option selected value="3">Action</option>
                            }
                            else
                            {
                                <option selected>Select one</option>
                                <option value="1">comedy</option>
                                <option value="2">drama</option>
                                <option value="3">Action</option>
                            }
                        }
              
                    </select>
                </div>

                <div class=" mb-3 col-lg-5 d-flex align-items-center mt-lg-4 ">
                    <input class="form-control" type="file" id="formFile">
                </div>

                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>